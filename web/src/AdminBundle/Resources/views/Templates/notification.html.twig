{% macro notif_loader() %}

    <div class="col-md-12 gray center-align loader-notif top-login-notification light-gray darken-1 close-alert notification-modal" style = "position: fixed; display: block;">
        <div class="timein-success">
            <center>
                <h5 style="display: inline-block;"> <div class="loading_dots">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div><b style="color: dimgray">Please wait...</b></h5>
            </center>
        </div>
    </div>
{% endmacro %}

{% macro loader() %}
    <div class="col-md-12 green center-align successful-popup top-login-notification light-green darken-1 close-alert notification-modal" style = "position: fixed;">
        <div class="timein-success"><h5 id="successful">Successful</h5></div>
    </div>

    <div class="col-md-12 red center-align error-popup top-login-notification light-red darken-1 close-alert notification-modal" style = "position: fixed;">
        <div class="timein-success"><h5 id="error">Error.</h5></div>
    </div>
{% endmacro %}

{% macro time_in_time_out_notif() %}
    <div class="col-md-12 green center-align timein-notif-container light-green darken-1 close-alert notification-modal" style = "position: fixed;">
        <div class="timein-success"><h5>Time-in Successful!</h5></div>
    </div>

    <div class="col-md-12 green center-align timeout-notif-container light-green darken-1 close-alert notification-modal" style = "position: fixed;">
        <div class="timeout-success"><h5>Time-out Successful!</h5></div>
    </div>

    <div class="col-md-12 orange darken-1 center-align error-notif-container close-alert notification-modal top" style = "position: fixed;">
        <div class="timeout-success"><h5>Oops! Something went wrong, please <a href="" class="white-text"><u>reload</u></a>.</h5></div>
    </div>
{% endmacro %}

{% macro login_top_loader() %}
    <div class="col-md-12 green center-align email-sent-notif top-login-notification light-green darken-1 close-alert notification-modal" style = "position: fixed;">
        <div class="timein-success"><h5>Email Sent</h5></div>
    </div>
{% endmacro %}