                bindEvents: function() {
                    DOC.on('click', btnViewLeaveRequest, function() {
                        var date = new Date();

                        _fullCalendar.showEventsModal(moment(date.getTime()));

                        showElements([ $(frmMoViewRequestLeave),$(btnSubmitLeaveRequest) ]);
