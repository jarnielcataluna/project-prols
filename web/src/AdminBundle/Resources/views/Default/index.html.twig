                saveLeaveRequest: function() {
                    if(!this.isValidForm())
                        return false;

                    var obj = [];
                    typeleave = 2;

                    $(frmMoViewRequestLeave).find('.multi_reqleaveform').each( function() {
                        var start = $(this).find('.start-date').val();
